.container
  .form-signin
    %h2.form-signin-heading Login
    = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      = f.error_notification
      .form-inputs
        = f.input :email,    required: false, autofocus: true, label: 'E-mail', placeholder: "Endere√ßo de email"
        = f.input :password, required: false,                  label: 'Senha', placeholder: "Senha"
        = f.input :remember_me, label: 'Lembre-me', as: :boolean if devise_mapping.rememberable?
      .form-actions
        = f.button :submit, "Entrar", class: 'btn btn-lg btn-primary btn-block'
      = render "devise/shared/links"