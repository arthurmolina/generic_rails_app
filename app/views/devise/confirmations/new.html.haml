.container
  .form-signin
    %h2.form-signin-heading Resend confirmation instructions
    = simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f|
      = f.error_notification
      = f.full_error :confirmation_token
      .form-inputs
        = f.input :email,    required: false, autofocus: true, placeholder: "Email address"
      .form-actions
        = f.button :submit, "Resend confirmation instructions", class: 'btn btn-lg btn-primary btn-block'
      = render "devise/shared/links"