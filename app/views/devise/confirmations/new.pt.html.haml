.container
  .form-signin
    %h2.form-signin-heading Reenviar instruções de confirmação
    = simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f|
      = f.error_notification
      = f.full_error :confirmation_token
      .form-inputs
        = f.input :email, label: 'E-mail', required: false, autofocus: true, placeholder: "Endereço de email"
      .form-actions
        = f.button :submit, "Reenviar instruções de confirmação", class: 'btn btn-lg btn-primary btn-block'
      = render "devise/shared/links"