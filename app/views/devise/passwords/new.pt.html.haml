.container
  .form-signin
    %h2.form-signin-heading Esqueceu sua senha?
    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      = f.error_notification
      .form-inputs
        = f.input :email, required: false, autofocus: true, placeholder: "Endereço de email", label: 'E-mail'
      .form-actions
        = f.button :submit, "Enviar instruções de redefinição de senha", class: 'btn btn-lg btn-primary btn-block'
      = render "devise/shared/links"