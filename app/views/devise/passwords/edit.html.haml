.container
  .form-signin
    %h2.form-signin-heading Change your password
    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
      = f.error_notification
      = f.input :reset_password_token, :as => :hidden
      = f.full_error :reset_password_token
      .form-inputs
        = f.input :password, :label => "New password", :required => true, :autofocus => true
        = f.input :password_confirmation, label: "Confirm your new password", required: false, placeholder: "Password Confirmation"
      .form-actions
        = f.button :submit, "Change my password", class: 'btn btn-lg btn-primary btn-block'
      = render "devise/shared/links"