.container
  .form-signin
    %h2.form-signin-heading Forgot your password?
    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      = f.error_notification
      .form-inputs
        = f.input :email, required: false, autofocus: true, placeholder: "Email address"
      .form-actions
        = f.button :submit, "Send me reset password instructions", class: 'btn btn-lg btn-primary btn-block'
      = render "devise/shared/links"