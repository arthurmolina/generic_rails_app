.container
  .form-signin
    %h2.form-signin-heading Please register
    = simple_form_for resource, as: resource_name, url: registration_path(resource_name), defaults: { input_html: { role: "form" } } do |f|
      = f.error_notification
      .form-inputs
        = f.input :username, required: false, placeholder: "Username", autofocus: true
        = f.input :name,     required: false, placeholder: "Full name"
        = f.input :email,    required: false, placeholder: "Email address"
        = f.input :password, required: false, placeholder: "Password"
        = f.input :password_confirmation, required: false, placeholder: "Password Confirmation"
      .form-actions
        = f.button :submit, "Sign up", class: 'btn btn-lg btn-primary btn-block'
      = render "devise/shared/links"