.container
  .form-signin
    %h2.form-signin-heading Cadastro
    = simple_form_for resource, as: resource_name, url: registration_path(resource_name), defaults: { input_html: { role: "form" } } do |f|
      = f.error_notification
      .form-inputs
        = f.input :username, required: false, label: 'Usuário', placeholder: "Nome de Usuário", autofocus: true
        = f.input :name,     required: false, label: 'Nome', placeholder: "Nome completo"
        = f.input :email,    required: false, label: 'E-mail', placeholder: "Endereço de E-mail"
        = f.input :password, required: false, label: 'Senha', placeholder: "Senha"
        = f.input :password_confirmation, required: false, label: 'Confirmar senha', placeholder: "Confirmar senha"
      .form-actions
        = f.button :submit, "Cadastrar", class: 'btn btn-lg btn-primary btn-block'
      = render "devise/shared/links"